
defutf8 on\n
defencoding utf8
encoding utf8 utf8
startup_message off
vbell off
# 色
# オレンジが赤になるとかならscreenが256色対応じゃないかも
# FYI: https://qiita.com/trapple/items/8ad1b0a7c4fa5b8341b0
defbce on
term xterm-256color
# ステータスライン
hardstatus alwayslastline "%{= cd} %-w%{= wk} %n %t* %{-}%+w %= LoadAVG [%l] "
# マウススクロール
termcapinfo xterm* ti@:te@
# スクロール行数
defscrollback 10000
# vimとかlessとかtigとかのバッファを終了時に消す
altscreen on
# デフォルトシェル
shell /bin/bash

